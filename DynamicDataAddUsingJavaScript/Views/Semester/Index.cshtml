@model DynamicDataAddUsingJavaScript.Models.Semester

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Student</h4>
        <hr/>
        @Html.ValidationSummary(true, "", new {@class = "text-danger"})
        <div class="form-group">
            @Html.LabelFor(model => model.FullName, htmlAttributes: new {@class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.EditorFor(model => model.FullName, new {htmlAttributes = new {@class = "form-control",id="semesterName"}})
                @Html.ValidationMessageFor(model => model.FullName, "", new {@class = "text-danger"})
            </div>
        </div>

       

    <div class="form-group">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <div class="row">
                        <div class="form-group">
                            @Html.Label("Category", htmlAttributes: new {@class = "control-label col-md-2"})
                            <div class="col-md-8">
                                @Html.DropDownList("DepartmentDropDown", null, htmlAttributes: new {@class = "dropdown form-control", id = "departmentDD"})
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.Label("Course", htmlAttributes: new {@class = "control-label col-md-2"})
                            <div class="col-md-8">
                                @Html.DropDownList("CourseDropDown", null, htmlAttributes: new {@class = "dropdown form-control", id = "courseDD"})
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="button" value="Add" class="btn btn-default" onclick="AddData()" id="addButton"/>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <table class="table table-bordered">
                                    <thead>
                                    <tr>
                                        <th>Name Of Department</th>
                                        <th>Name Of Course</th>
                                        <th>Name Of Semester</th>
                                    </tr>
                                    </thead>
                                    <tbody id="tblBody">
                                    
                                    </tbody>
                                </table>
                            </div>
                        </div>

                    </div>
                    
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Create" class="btn btn-default" />
                        </div>
                    </div>
                </div>
                 

                    </div>
                </div>
            </div>
        </div>



}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
@section scripts
{
    <script src="~/scripts/Student/studentCreate.js"></script>
}
